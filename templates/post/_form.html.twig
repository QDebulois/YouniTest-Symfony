{{ form_start(form, {"attr": {"class": "d-flex flex-column gap-3 m-5"}}) }}
    {% if not form.vars.valid %}
      <div class="alert alert-danger">{{ form_errors(form) }}</div>
    {% endif %}
    {{ form_row(form.category, {"attr": {"class": "form-control"}}) }}
    {{ form_row(form.title, {"attr": {"class": "form-control"}}) }}
    {{ form_row(form.text, {"attr": {"class": "form-control"}}) }}
    <button class="btn btn-success mx-auto">{{ button_label|default('Enregistrer') }}</button>
{{ form_end(form) }}
