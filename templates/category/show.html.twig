{% extends 'base.html.twig' %}

{% block title %}Categories{% endblock %}

{% block body %}
    <h1>Categories</h1>
    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ category.id }}</td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ category.title }}</td>
            </tr>
            <tr>
                <th>Created_at</th>
                <td>{{ category.createdAt ? category.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>
    <a class="btn btn-primary" href="{{ path('app_category_index') }}">Voir les catégories</a>
    <a class="btn btn-warning" href="{{ path('app_category_edit', {'id': category.id}) }}">Modifier</a>
    {{ include('category/_delete_form.html.twig') }}
    <ul>
    {% for h in history %}
      <li><i>Modifié le {{ h.updatedAt|date("Y-m-d H:i:s") }} par {{ h.user.email }}</i></li>
    {% endfor %}
    </ul>
{% endblock %}
